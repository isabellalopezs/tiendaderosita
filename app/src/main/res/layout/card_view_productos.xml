<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewProductos"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/rosado_1"
    app:contentPadding="4dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="10dp">
        </ImageView>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo producto"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/sourcesanstreslight"
            android:textAlignment="center"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:layout_alignParentTop="true"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp">

        </TextView>

        <TextView
            android:id="@+id/signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/sourcesanstreslight"
            android:textAlignment="center"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:layout_below="@+id/titulo"
            android:textSize="30dp"
            android:layout_marginLeft="5dp">
        </TextView>

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="precio"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/sourcesanstreslight"
            android:textAlignment="center"
            android:layout_toEndOf="@id/signo"
            android:layout_toRightOf="@id/image"
            android:layout_below="@+id/titulo"
            android:textSize="30dp"
            android:layout_marginLeft="5dp">
        </TextView>
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esto es una descripcion"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/sourcesanstreslight"
            android:textAlignment="center"
            android:layout_below="@+id/image"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">
        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>