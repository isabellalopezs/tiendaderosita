<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosado_2"
    android:orientation="vertical"
    tools:context=".view.ui.fragments.menuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/morado_1"
                android:fontFamily="@font/sourcesanstreslight"
                android:gravity="center"
                android:text="BIENVENIDO A LA TIENDA DE ROSITA"
                android:textSize="35dp"
                android:textStyle="bold"></TextView>




        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="575dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="6">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewProductos"
                    android:layout_margin="12dp"
                    android:background="none"
                    app:cardBackgroundColor="@color/rosado_1"
                    app:contentPadding="4dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp">
                        </ImageView>

                        <TextView
                            android:id="@+id/titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo producto"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/sourcesanstreslight"
                            android:textAlignment="center"
                            android:layout_toEndOf="@id/image"
                            android:layout_toRightOf="@id/image"
                            android:layout_alignParentTop="true"
                            android:textSize="30dp"
                            android:layout_marginLeft="20dp">
                        </TextView>

                        <TextView
                            android:id="@+id/precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="precio"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/sourcesanstreslight"
                            android:textAlignment="center"
                            android:layout_toEndOf="@id/image"
                            android:layout_toRightOf="@id/image"
                            android:layout_below="@+id/titulo"
                            android:textSize="30dp"
                            android:layout_marginLeft="20dp">
                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </ScrollView>




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-75dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttonNavigationMenu"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@color/morado_1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_navigation_bar"
            tools:ignore="MissingConstraints">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>




</LinearLayout>

